<div class="container">
  <div class="container_form">
    <div class="field">
      <h1>Proyecto: <span><%= @project.title %></span></h1>
    </div>
    <div class="field">
      <%= image_tag @project.image.url(:medium) %>
    </div>
    <div class="row">
      <div class="field col-md-8">
        <h4><strong>Descripción:</strong></h4>
        <p><%= @project.description %></p>
      </div>
      <div class="field col-md-4">
        <h4><strong>Categorías:</strong></h4>
        <% @project.category.each do |category| %>
        <%= link_to category.title, category %>, 
        <% end %>
      </div>
    </div>
    <hr>
    <div class="field">
      <% if user_signed_in? && current_user.is_asistant? || user_signed_in? && current_user.is_admin? %>
      <%= link_to 'Editar', edit_project_path(@project) %> |
      <%= link_to 'Proyectos', projects_path %> |
      <%= link_to 'Regresar', :back %>
      <% else %>
      <%= link_to 'Proyectos', projects_path %> |
      <%= link_to 'Regresar', :back %>
      <% end %>
    </div>
  </div>
</div>