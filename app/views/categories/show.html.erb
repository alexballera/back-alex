<div class="container">
  <div class="jumbotron container_form">
    <h1><strong>Categoría</strong></h1>
    <div class="field">
    <div class="field">
      <h3><strong>Título: </strong><%= @category.title %></h3>
    </div>
    <div class="field">
      <h3><strong>Artículos:</strong></h3>
      <% @category.article.each do |article| %>
      <%= link_to article.title, article %>, 
      <% end %>
    </div>
    <div class="field">
      <h3><strong>Proyectos:</strong></h3>
      <% @category.project.each do |project| %>
      <%= link_to project.title, project %>, 
      <% end %>
    </div>
    <div class="field">
      <% if user_signed_in? && current_user.is_asistant? || user_signed_in? && current_user.is_admin? %>
      <%= link_to 'Editar', edit_category_path(@category) %> |
      <%= link_to 'Regresar', categories_path %>
      <% else %>
      <%= link_to 'Regresar', categories_path %>
      <% end %>
    </div>
  </div>
</div>
