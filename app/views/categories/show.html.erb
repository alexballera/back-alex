<div class="container">
  <div class="container_form">
    <h1><strong>Categoría</strong></h1>
    <div class="field">
    <div class="field">
      <h2><strong><%= @category.title %></strong></h2>
    </div>
    <div class="field">
      <h4><strong>Descripción:</strong></h4>
      <p><%= @category.description %></p>
    </div>
    <div class="field">
      <h4><strong>Artículos:</strong></h4>
      <% @category.article.each do |article| %>
      <%= link_to article.title, article %>, 
      <% end %>
    </div>
    <div class="field">
      <h4><strong>Proyectos:</strong></h4>
      <% @category.project.each do |project| %>
      <%= link_to project.title, project %>, 
      <% end %>
    </div>
    <hr>
    <div class="field">
      <% if user_signed_in? && current_user.is_asistant? || user_signed_in? && current_user.is_admin? %>
      <%= link_to 'Editar', edit_category_path(@category) %> |
      <%= link_to 'Categorías', categories_path %> |
      <%= link_to 'Regresar', :back %>
      <% else %>
      <%= link_to 'Categorías', categories_path %> |
      <%= link_to 'Regresar', :back %>
      <% end %>
    </div>
  </div>
</div>
