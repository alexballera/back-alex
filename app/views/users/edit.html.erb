<div class="container">
  <div class="jumbotron container_form">
    <h1><strong>Editar Usuario</strong></h1>
    <% @user.errors %>
    <%= semantic_form_for @user do |f| %>
    <%= f.input :email %>
    <%= f.input :name, label: "Nombre" %>
    <%if current_user.is_admin? %>
      <%= f.input :permission_level, name: "quantity", min: "1", max: "3", label: "Nivel (1 = Usuario; 2 = Asistente; 3 = Admin)" %>
    <%else%>
      <%= f.input :permission_level, name: "quantity", min: "1", max: "2", label: "Nivel (1 = Usuario; 2 = Asistente)" %>
    <%end%>

    <ul class="nav nav-pills", style="margin:0;padding:0">
      <li class="field", role="presentation", style="hover:green"> 
        <%= f.submit "Guardar", class:"users__boton users__boton--guardar" %>
      </li>
      <li class="field", role="presentation", style="hover:green">
        <%= link_to "Cancelar", @user, class:"users__boton users__boton--cancelar" %> 
      </li> 
    </ul>
    <% end %> 
  </div>
</div>